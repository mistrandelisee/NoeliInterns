        }
      .my-legend .legend-title {
        text-align: left;
        margin-bottom: 5px;
        font-weight: bold;
        font-size: 90%;
        }
      .my-legend .legend-scale ul {
        margin: 0;
        margin-bottom: 5px;
        padding: 0;
        float: left;
        list-style: none;
        }
      .my-legend .legend-scale ul li {
        font-size: 80%;
        list-style: none;
        margin-left: 0;
        line-height: 18px;
        margin-bottom: 2px;
         
        }
      .my-legend ul.legend-labels li span {
        display: block;
        float: left;
        height: 16px;
        width: 30px;
        margin-right: 5px;
        margin-left: 0;
        border: 1px solid #999;
        }
      .my-legend .legend-source {
        font-size: 70%;
        color: #999;
        clear: both;
        }   
         
      .TitleCompoment {
        font-family: sans-serif;
        margin: auto;
        color: #000f59;
        text-align: center;
        font-size: 30px;
        max-width: 750px;
        position: relative;
      }
         
      .TitleCompoment:before {
        content: "";
        display: block;
        width: 15%;
        height: 5px;
        background: #191970;
        left: 0;
        top: 50%;
        position: absolute;
      }
      .TitleCompoment:after {
        content: "";
        display: block;
        width: 15%;
        height: 5px;
        background: #191970;
        right: 0;
        top: 50%;
        position: absolute;
      }     
    </style>
